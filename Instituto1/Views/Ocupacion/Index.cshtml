@model OcupacionViewModel
@{ ViewData["Title"] = "Ocupación de Cursos"; }

<div class="card">
    <h2> Ocupación de Cursos Programados</h2>

    <form method="get">
        <div class="filter-bar">
            <div class="filter-group">
                <label>Período</label>
                <select name="periodo">
                    <option value="">Todos</option>
                    @foreach (var p in Model.Periodos)
                    {
                        <option value="@p" selected="@(Model.Periodo == p)">@p</option>
                    }
                </select>
            </div>
            <div class="filter-group">
                <label>Modalidad</label>
                <select name="modalidad">
                    <option value="">Todas</option>
                    <option value="Presencial" selected="@(Model.Modalidad=="Presencial")">Presencial</option>
                    <option value="Virtual"    selected="@(Model.Modalidad=="Virtual")">Virtual</option>
                </select>
            </div>
            <div class="filter-group" style="max-width:140px;">
                <label>&nbsp;</label>
                <button type="submit" class="btn"> Filtrar</button>
            </div>
        </div>
    </form>

    @if (Model.Resultados.Any())
    {
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Curso</th><th>Instructor</th><th>Período</th><th>Modalidad</th>
                        <th>Cupo</th><th>Inscritos</th><th>Disponibles</th><th>Ocupación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Resultados)
                    {
                        <tr>
                            <td>@r.Curso</td>
                            <td>@r.Instructor</td>
                            <td>@r.Periodo</td>
                            <td>@r.Modalidad</td>
                            <td>@r.Cupo</td>
                            <td>@r.Inscritos</td>
                            <td>@r.Disponibles</td>
                            <td>
                                @{ var bo = r.PorcentajeOcupacion >= 75 ? "badge-success"
                                          : r.PorcentajeOcupacion >= 40 ? "badge-warning" : "badge-danger"; }
                                <span class="badge @bo">@r.PorcentajeOcupacion.ToString("F1")%</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else { <p class="empty-msg">Sin datos disponibles.</p> }
</div>
